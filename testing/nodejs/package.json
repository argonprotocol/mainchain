{
  "name": "@argonprotocol/testing",
  "version": "1.4.0",
  "description": "A testing library to launch locally built binaries/dockers for Argon.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argonprotocol/mainchain.git"
  },
  "author": "Argon Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/argonprotocol/mainchain/issues"
  },
  "homepage": "https://github.com/argonprotocol/mainchain#readme",
  "scripts": {
    "build": "tsup",
    "tsc": "tsup",
    "watch": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "lib/"
  ],
  "type": "module",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "dependencies": {
    "@argonprotocol/mainchain": "1.4.0",
    "bitcoin-core": "^5.0.0",
    "detect-port": "^2.1.0",
    "docker-compose": "^1.2.0",
    "http-proxy": "^1.18.1",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "proper-lockfile": "^4.1.2",
    "vitest": "^4.0.5"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.16",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/proper-lockfile": "^4.1.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@4.1.0"
}
