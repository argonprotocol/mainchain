{
  "name": "@argonprotocol/mainchain",
  "version": "1.1.0-rc.1",
  "description": "A client for accessing the Argon mainchain apis.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argonprotocol/mainchain.git"
  },
  "author": "Argon Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/argonprotocol/mainchain/issues"
  },
  "bin": "./lib/cli/index.cjs",
  "homepage": "https://github.com/argonprotocol/mainchain#readme",
  "scripts": {
    "build": "yarn generate:defs && yarn generate:meta && node clean-build.js && yarn build:tsc",
    "generate:defs": "tsx node_modules/.bin/polkadot-types-from-defs --endpoint metadata.json --input ./src/interfaces --package @argonprotocol/mainchain/interfaces",
    "generate:meta": "tsx node_modules/.bin/polkadot-types-from-chain --endpoint metadata.json --output ./src/interfaces --strict",
    "build:tsc": "tsup && tsc -p tsconfig-types.json",
    "watch": "tsup --watch",
    "test": "vitest --typecheck --disableConsoleIntercept",
    "test:ci": "vitest --typecheck --disableConsoleIntercept --retry=1"
  },
  "type": "module",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./cli/*": {
      "types": "./lib/cli/*.d.ts",
      "import": "./lib/cli/*.js",
      "require": "./lib/cli/*.cjs"
    },
    "./test-utils/*": {
      "types": "./lib/test-utils/*.d.ts",
      "import": "./lib/test-utils/*.js",
      "require": "./lib/test-utils/*.cjs"
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@polkadot/api": "^15.8.1",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "bignumber.js": "^9.1.2",
    "commander": "^13.1.0",
    "console-table-printer": "^2.12.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.3",
    "@polkadot/typegen": "^15.8.1",
    "@substrate/ss58-registry": "^1.49.0",
    "@types/http-proxy": "^1.17.16",
    "@types/node": "^18.19.6",
    "@types/pg": "^8.11.12",
    "@vitest/coverage-v8": "3.1.1",
    "bitcoin-core": "^5.0.0",
    "detect-port": "^2.1.0",
    "http-proxy": "^1.18.1",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "shx": "^0.4.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "packageManager": "yarn@4.1.0"
}
