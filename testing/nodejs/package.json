{
  "name": "@argonprotocol/testing",
  "version": "1.1.0-rc.3",
  "description": "A testing library to launch locally built binaries/dockers for Argon.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argonprotocol/mainchain.git"
  },
  "author": "Argon Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/argonprotocol/mainchain/issues"
  },
  "homepage": "https://github.com/argonprotocol/mainchain#readme",
  "scripts": {
    "build": "tsup",
    "tsc": "tsup",
    "watch": "tsup --watch",
    "typecheck": "tsc -w --noEmit"
  },
  "files": [
    "lib/"
  ],
  "type": "module",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "dependencies": {
    "@argonprotocol/mainchain": "1.1.0-rc.3",
    "bitcoin-core": "^5.0.0",
    "detect-port": "^2.1.0",
    "http-proxy": "^1.18.1",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "vitest": "^3.1.1"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.16",
    "@types/node": "^18.19.6",
    "@types/pg": "^8.11.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.1.0"
}
